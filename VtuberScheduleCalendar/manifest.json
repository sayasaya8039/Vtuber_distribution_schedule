{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.3.0",
  "description": "__MSG_extDescription__",
  "default_locale": "ja",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "sidePanel",
    "identity"
  ],
  "host_permissions": [
    "https://holodex.net/*",
    "https://schedule.hololive.tv/*",
    "https://www.nijisanji.jp/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "915221280614-inq0k7n21urmbpc661nh00svlthi638i.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "VTuber Schedule Calendar",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
